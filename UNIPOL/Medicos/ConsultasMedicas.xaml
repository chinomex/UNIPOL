<Window x:Class="UNIPOL.Medicos.ConsultasMedicas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:UNIPOL.Medicos"
        mc:Ignorable="d"
        Title="ConsultasMedicas" 
        Height="530" 
        Width="700"
        
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="20,10,20,5">
            <StackPanel Orientation="Horizontal">
                <TextBox materialDesign:HintAssist.Hint="Paciente"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         VerticalAlignment="Center"
                         x:Name="txtPaciente"
                         Padding="0,5,0,5"
                         Margin="0,8,0,0"
                         Width="585"
                         FontSize="16"
                         IsEnabled="False"/>
                <Button Content="{materialDesign:PackIcon AccountSearch}"
                        ToolTip="Buscar"
                        VerticalAlignment="Bottom"
                        FontSize="34"
                        Foreground="#fff"
                        Margin="10,0,0,0"
                        x:Name="btnBuscarPaciente"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox materialDesign:HintAssist.Hint="Medicamento"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         VerticalAlignment="Center"
                         x:Name="txtMedicamento"
                         Padding="0,5,0,5"
                         Margin="0,8,0,0"
                         Width="585"
                         FontSize="16"
                         IsEnabled="False"/>
                <Button Content="{materialDesign:PackIcon Magnify}"
                        ToolTip="Buscar"
                        VerticalAlignment="Bottom"
                        FontSize="34"
                        Foreground="#fff"
                        Margin="10,0,0,0"
                        x:Name="btnBuscarMedicamento"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,0">
                <TextBox materialDesign:HintAssist.Hint="Cantidad"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Left"
                         x:Name="txtCantidad"
                         Width="150"
                         Padding="0,5,0,5"
                         FontSize="16"/>

                <TextBox materialDesign:HintAssist.Hint="Observaciones"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Left"
                         x:Name="txtObservaciones"
                         Width="370"
                         Padding="0,5,0,5"
                         Margin="20,0,0,0"
                         FontSize="16"/>

                <Button Style="{StaticResource MaterialDesignPaperDarkButton}"
                        Width="90"
                        VerticalAlignment="Bottom"
                        ToolTip="Agregar"
                        Margin="13,0,0,0"
                        Content="Agregar"
                        Click="btnAgregar_Click"/>

            </StackPanel>

            <DataGrid ItemsSource="{Binding lstArticulos, UpdateSourceTrigger=PropertyChanged}"
                      Height="230"
                      Margin="0,10,0,0"
                      Name="dg"              
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserSortColumns="False" 
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding CodArticulo}"
                                        Header="Codigo">
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Descripcion}"
                                        Header="Descripcion">
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Cantidad}"
                                        Header="Cantidad">
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Observacion}"
                                        Header="Observacion"
                                        Width="210">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Eliminar"
                                        Width="100">
                    </DataGridTextColumn>                    
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                        Width="100"
                        ToolTip="Cancelar"
                        Content="Cancelar"
                        Margin="0,0,20,0"
                        x:Name="btnCancelar"
                        Foreground="Black"
                        Background="Silver"
                        Click="btnCancelar_Click"/>

                <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Width="100"
                        ToolTip="Guardar cambios"
                        Content="Guardar"
                        x:Name="btnGuardar"
                        Click="btnGuardar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
